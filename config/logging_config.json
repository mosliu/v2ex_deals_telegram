{
    "version": 1,
    "formatters": {
        "detailed": {
            "class": "logging.Formatter",
            "format": "%(asctime)s %(name)-15s %(levelname)-8s %(processName)-10s %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO"
        },
        "file": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "when": "midnight",
            "interval": 1,
            "backupCount": 7,
            "filename": "mplog.log",
            "formatter": "detailed"
        },
        "foofile": {
            "class": "logging.FileHandler",
            "filename": "mplog-foo.log",
            "mode": "w",
            "formatter": "detailed"
        },
        "errors": {
            "class": "logging.FileHandler",
            "filename": "mplog-errors.log",
            "mode": "w",
            "level": "ERROR",
            "formatter": "detailed"
        }
    },
    "loggers": {
        "foo": {
            "handlers": [
                "foofile"
            ]
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "console",
            "file",
            "errors"
        ]
    }
}